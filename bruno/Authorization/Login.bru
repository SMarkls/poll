meta {
  name: Login
  type: http
  seq: 1
}

post {
  url: {{BASE_URL}}/Authorization/Login
  body: json
  auth: none
}

body:json {
  {
    "login": "{{LOGIN}}",
    "password": "{{PASSWORD}}"
  }
}

script:post-response {
  const cookies = res.getHeader('set-cookie');
  
  if(cookies) {
    bru.setEnvVar("COOKIE", cookies.join('; '));
  }
  
  bru.setEnvVar("AUTHORIZATION", res.getBody().accessToken);
}
